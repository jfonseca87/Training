@model  DemoWepAPI_3.Models.Book

@{
    Layout = null;
}

<html>
<head>
    <link href="~/Assets/css/bootstrap-table.min.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>EditBook</title>
</head>
<body>
    <div class="container">
        <h2>Edit Book </h2>
        @using (Html.BeginForm("EditBook", "Book", FormMethod.Post))
        {
            @Html.HiddenFor(b => b.BookId)
            <div class="form-group">
                <label>Title: </label>
                @Html.TextBoxFor(b => b.Title, new { @class="form-control" })
            </div>
            <div class="form-group">
                <label>ISBN: </label>
                @Html.TextBoxFor(b => b.ISBN, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" name="btnGuardar" value="Guardar" class="btn btn-danger" />
            </div>
        }
    </div>
</body>
</html>


<script src="~/Assets/js/jquery.js"></script>
<script src="~/Assets/js/bootstrap.min.js"></script>