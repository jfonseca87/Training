
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap-table.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <br />
    <div class="container">
        <h2>Books</h2>
    </div>
    <hr />
    <div class="container">
        <a href="@Url.Action("NewBook", "Book")" class="btn btn-danger">New Book</a> 
        <table class="table table-hover" data-toggle="table" data-pagination="true" data-search="true">
            <thead>
                <tr>
                    <th> ID </th>
                    <th> Title </th>
                    <th> ISBN </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td> @book.BookId </td>
                        <td> @book.Title </td>
                        <td> @book.ISBN </td>
                        <td>
                            <a href="@Url.Action("EditBook", "Book", new { id = book.BookId })">Edit </a> |
                            <a href="@Url.Action("DeleteBook", "Book", new { id = book.BookId })" onclick="if (!confirm('Esta seguro(a) de borrar el libro de la BD?')) return false;">Delete </a>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>
    </div>
</body>
</html>

<script src="~/Assets/js/jquery.js"></script>
<script src="~/Assets/js/bootstrap.min.js"></script>
<script src="~/Assets/js/bootstrap-table.min.js"></script>