@model ConsumerService.Models.Book

@{
    ViewBag.Title = "EditBook";
}

<h2>EditBook</h2>

@Html.HiddenFor(b => b.BookId)
<div class="form-group">
    <label> Title </label>
    @Html.TextBoxFor(b => b.Title, new { @class="form-control" })
</div>
<div class="form-group">
    <label> ISBN </label>
    @Html.TextBoxFor(b => b.ISBN, new { @class = "form-control" })
</div>
<div class="form-group">
    <button class="btn btn-danger" id="btnEdit"> Save </button>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/logic.js"></script>